<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/memorySPESA"
    android:fitsSystemWindows="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/schermoSpesa"
        android:background="@color/GRIGIO"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/superdisplaySpesa"
            android:background="@color/GRIGIO"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.gms.ads.AdView
                android:layout_gravity="center"
                android:id="@+id/PUB_mainSPESA"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:adSize="BANNER"
                app:adUnitId="ca-app-pub-8629550575650531/2250755130"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/classicthemetablayout"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <EditText
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/bianco"
                    android:textColorHint="@color/titleoactioneclassic"
                    android:ellipsize="none"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/testoListaSconto"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/titleListaHint"
                    android:cursorVisible="true"
                    android:singleLine="false"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"/>
                <LinearLayout
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5">
                    <ImageButton
                        android:layout_gravity="center_vertical"
                        android:id="@+id/startActivityList"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="startpresentlist"
                        android:layout_marginEnd="15dp"
                        app:srcCompat="@drawable/ic_shopping_list_classic"/>
                    <ImageButton
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="savelist"
                        android:contentDescription="@string/descshare"
                        android:layout_marginEnd="15dp"
                        app:srcCompat="@drawable/ic_save_classic"/>
                    <ImageButton
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="deletelist"
                        android:contentDescription="@string/descdelete"
                        android:layout_marginEnd="15dp"
                        app:srcCompat="@drawable/ic_delete_classic_24dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/grigio_classic"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/textColonna1"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/colonna1"
                    android:singleLine="true"
                    android:layout_weight="1.3"
                    android:fontFamily="casual"
                    android:textAlignment="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/grigio_classic"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/textColonna2"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/colonna2"
                    android:singleLine="true"
                    android:layout_weight="1.7"
                    android:fontFamily="casual"
                    android:textAlignment="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/grigio_classic"
                    android:ellipsize="none"
                    android:gravity="top"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/textColonna3"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/colonna3"
                    android:singleLine="true"
                    android:layout_weight="1.9"
                    android:fontFamily="casual"
                    android:textAlignment="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textAlignment="center"/>
            </LinearLayout>
            <ScrollView
                android:id="@+id/ScrollSpesa"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/LayoutListaItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </ScrollView>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/theme_classic_base_for_shopping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/NERO"
                        android:ellipsize="none"
                        android:gravity="end"
                        android:id="@+id/textTotitemMain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/totalimain1"
                        android:singleLine="true"
                        android:fontFamily="casual"
                        android:paddingStart="4dp"
                        android:paddingEnd="2dp"/>
                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/NERO"
                        android:ellipsize="none"
                        android:gravity="end"
                        android:id="@+id/textTotpriceMain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/totalimain2"
                        android:singleLine="true"
                        android:fontFamily="casual"
                        android:paddingStart="4dp"
                        android:paddingEnd="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/bianco"
                        android:ellipsize="none"
                        android:id="@+id/totItemSpesa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:singleLine="true"
                        android:fontFamily="casual"
                        android:paddingStart="4dp"
                        android:paddingEnd="2dp"/>
                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/bianco"
                        android:ellipsize="none"
                        android:id="@+id/totPriceSpesa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:singleLine="true"
                        android:fontFamily="casual"
                        android:paddingStart="4dp"
                        android:paddingEnd="2dp"/>
                </LinearLayout>
                <ImageButton
                    android:layout_gravity="center"
                    android:id="@+id/addItemList"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginBottom="2.5dp"
                    android:layout_weight="1.8"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/ic_add_shopping_classic"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@color/GRIGIO"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:background="@drawable/theme_classic_base_for_shopping_memory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/memoriaSpesa"
                android:background="@color/GRIGIO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/theme_classic_base_for_shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/removeFilterListMemorySpepa"
                android:background="@android:color/transparent"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="undofilterMemorySpesa"
                app:srcCompat="@drawable/ic_undo_classic"
                style="?android:attr/borderlessButtonStyle"/>
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/FilterListMemorySpepa"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="filterMemorySpesa"
                app:srcCompat="@drawable/ic_sort_classic_24dp"
                style="?android:attr/borderlessButtonStyle"/>
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/DeleteListMemorySpepa"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="deleteallSpesa"
                app:srcCompat="@drawable/ic_delete_classic_24dp"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
