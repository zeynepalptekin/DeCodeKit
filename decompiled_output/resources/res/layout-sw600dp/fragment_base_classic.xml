<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView
                android:textSize="25sp"
                android:textColor="@color/NERO"
                android:gravity="start|center_vertical"
                android:layout_gravity="start|top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/unitaIniziale"
                android:singleLine="true"
                android:layout_marginStart="8dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:textSize="40sp"
                    android:textColor="@color/NERO"
                    android:ellipsize="none"
                    android:gravity="center"
                    android:id="@+id/spinnerUp"
                    android:background="@drawable/casella_conv_classic"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:singleLine="true"
                    android:layout_weight="2"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    style="?android:attr/borderlessButtonStyle"/>
                <TextView
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/NERO"
                    android:ellipsize="none"
                    android:gravity="end|center_vertical"
                    android:layout_gravity="end|center_vertical"
                    android:id="@+id/updisplayconv"
                    android:background="@drawable/casella_conv_classic"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:text=""
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:textIsSelectable="true"
                    android:textAllCaps="false"
                    android:fontFamily="casual"
                    android:textAlignment="textEnd"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:letterSpacing="0.05"/>
            </LinearLayout>
            <TextView
                android:textSize="25sp"
                android:textColor="@color/NERO"
                android:gravity="start|center_vertical"
                android:layout_gravity="start|top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/unitaFinale"
                android:singleLine="true"
                android:layout_marginStart="8dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:textSize="40sp"
                    android:textColor="@color/NERO"
                    android:ellipsize="none"
                    android:gravity="center"
                    android:id="@+id/spinnerDown"
                    android:background="@drawable/casella_conv_classic"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:singleLine="true"
                    android:layout_weight="2"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    style="?android:attr/borderlessButtonStyle"/>
                <TextView
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/NERO"
                    android:ellipsize="none"
                    android:gravity="end|center_vertical"
                    android:layout_gravity="end|center_vertical"
                    android:id="@+id/downdisplayconv"
                    android:background="@drawable/casella_conv_classic"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:text=""
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:textIsSelectable="true"
                    android:fontFamily="casual"
                    android:textAlignment="textEnd"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:letterSpacing="0.05"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
