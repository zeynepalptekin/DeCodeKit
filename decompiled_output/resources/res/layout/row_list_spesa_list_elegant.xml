<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/RowListaItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <CheckBox
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/checkboxList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.3"
        android:onClick="ListSigned"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:buttonTint="@color/elegentresult"/>
    <TextView
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimarybase"
        android:ellipsize="none"
        android:gravity="start"
        android:layout_gravity="center"
        android:id="@+id/textitemList"
        android:background="@drawable/theme_elegant_base_for_shopping_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:layout_weight="1"
        android:onClick="tagliaitem"
        android:fontFamily="casual"
        android:textAlignment="textStart"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>
    <TextView
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimarybase"
        android:ellipsize="none"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/textQTList"
        android:background="@drawable/theme_elegant_base_for_shopping_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:layout_weight="2"
        android:onClick="tagliaitem"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"/>
</LinearLayout>
